<% product_props = JSON.parse(raw(render(template: 'products/show.json.jbuilder'))) %>
<%= isomorphic('Product', 'product', product_props) %>

<% comments_props = JSON.parse("{\"productId\": #{@product.id}, \"comments\": #{raw(render(template: 'comments/index.json.jbuilder' ))} }") %>
<% if params[:client].present? %>
  <%= client('CommentSection', 'comment-section', comments_props) %>
<% else %>
  <%= isomorphic('CommentSection', 'comment-section', comments_props) %>
<% end %>
