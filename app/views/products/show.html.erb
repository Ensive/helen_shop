<div class="product u-clear">
  <div class="product__preview">
    <%= image_tag @product.image_url, class: '' if @product.image_url.present? %>
  </div>

  <div class="product__details-wrapper">
    <%= @product %>
  </div>

  <!-- related stuff-->
  <div class="product__related-wrapper u-clear">

  </div>
</div>

<div class="product-comments">
  <h3 class="product-comments__title">
    <%= t('general.user_ratings') %>
  </h3>

  <!--<div id="comment-list"></div>-->
  <% props = JSON.parse("{\"productId\": #{@product.id}, \"comments\": #{raw(render(template: 'comments/index.json.jbuilder' ))} }") %>
  <% if params[:client].present? %>
    <%= client('CommentSection', 'cs', props) %>
  <% else %>
    <%= isomorphic('CommentSection', 'cs', props) %>
  <% end %>
</div>

