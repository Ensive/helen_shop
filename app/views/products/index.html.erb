<%= render partial: 'reusable_partials/sidebar' %>

<div class="content u-clear">
  <div class="products u-clear">
    <% @products.each do |product| %>
      <div class="products-item">
        <%= link_to product, class: 'products-item__link products-item__link--image-wrapper' do %>
          <%= image_tag product.image_url, class: 'products-item__image' %>
        <% end %>

        <div class="products-item__metadata">
          <span class="products-item__price">
            <!-- TODO: make UAH -->
            <%= number_to_currency(product.price) %>
          </span>
          <span>
            <i class="icon-appicons-08"></i>
          </span>
        </div>

        <!-- discount label -->
      </div>
    <% end %>
  </div>
</div>
