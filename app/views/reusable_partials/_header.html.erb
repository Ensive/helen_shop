<header class="header">
  <nav class="header__nav">
    <div class="container u-clear">
      <div class="u-left">
        <a class="header__link header__link--main is-active" href="#">
          <%= t 'general.women' %>
        </a>
        <a class="header__link header__link--main" href="#">
          <%= t 'general.men' %>
        </a>
      </div>

      <div class="u-right">
        <a href="#" class="header__link header__link--icon">
          <!-- TODO: make icon as a pseudo element-->
          <i class="header__icon icon-appicons-09"></i>
        </a>
        <a class="header__link header__link--icon" href="#">
          <!-- TODO: make icon as a pseudo element-->
          <i class="header__icon icon-appicons-07"></i>
        </a>
        <%
          cart_props = {
            initialCount: current_order.order_items.size,
            t: { my_cart: t('general.my_cart') },
            products: current_products,
            totalPrice: current_order.subtotal
          }
        %>
        <%= isomorphic('CartContainer', 'cart-section', cart_props) %>
      </div>
    </div>

    <div class="header__menu">
      <div class="container u-clear">
        <a class="header__link header__link--category is-active" href="#">
          <%= t 'categories.new' %>
        </a>
        <a class="header__link header__link--category" href="#">
          <%= t 'categories.clothing' %>
        </a>
        <a class="header__link header__link--category" href="#">
          <%= t 'categories.shoes' %>
        </a>
        <a class="header__link header__link--category" href="#">
          <%= t 'categories.sale' %>
        </a>
      </div>
    </div>

  </nav>
</header>
